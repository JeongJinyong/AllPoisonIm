<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="228dp"
        android:layout_height="320dp"
        android:background="@drawable/bookstroe_bg_dot1"
        app:layout_constraintBottom_toBottomOf="@id/bookstore_type2_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/bookstore_type2_img" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_type2_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black_1c1c1c"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="한 번 들으면 잊히지 않을 이름, 어서어서.\n어디에나 서점이 있지만,\n어디에도 없는 서점을 만들고 싶다는 의미가 담겨 있다." />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_type2_img"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_type2_txt"
        tools:src="@drawable/test1" />


</android.support.constraint.ConstraintLayout>
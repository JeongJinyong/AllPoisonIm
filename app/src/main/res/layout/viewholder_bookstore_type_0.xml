<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_1c1c1c">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_main_img"
        android:layout_width="match_parent"
        android:layout_height="384.3dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/test1" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_marginTop="21.3dp"
        app:layout_constraintTop_toBottomOf="@id/bookstore_main_img">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bookstroe_bg_black" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bookstore_favorites_btn" />

    <ToggleButton
        android:id="@+id/bookstore_favorites_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_btn_favorites"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/bookstore_gradient"
        app:layout_constraintBottom_toBottomOf="@id/bookstore_main_img" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_theme_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13.3dp"
        android:fontFamily="@font/noto_medium"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/bookstore_main_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="해방촌 독립서점 투어" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/notoserif_semibold"
        android:letterSpacing="-0.03"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_theme_txt"
        tools:text="별별 책이 다 있는 독립서점,\n별책부록!" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_profile_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_title_txt"
        tools:src="@drawable/profile_empty" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_editor_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/noto_regular"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/bookstore_profile_img"
        app:layout_constraintLeft_toRightOf="@id/bookstore_profile_img"
        app:layout_constraintTop_toTopOf="@id/bookstore_profile_img"
        tools:text="에디터 김프만" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_createtime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.4"
        android:fontFamily="@font/noto_regular"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/bookstore_profile_img"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@id/bookstore_editor_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bookstore_profile_img"
        tools:text="1h ago" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_map_img"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_profile_img"
        app:srcCompat="@drawable/bookstore_map" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_time_img"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_map_txt"
        app:srcCompat="@drawable/bookstore_time" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_phone_img"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_time_txt"
        app:srcCompat="@drawable/bookstore_phone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/bookstore_insta_img"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookstore_phone_txt"
        app:srcCompat="@drawable/bookstore_insta" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_map_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/bookstore_map_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookstore_map_img"
        tools:text="별책부록\n서울 용산구 신흥로16길 7" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/bookstore_time_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookstore_time_img"
        tools:text="평일 11:00 - 19:30 (휴무일: 매달 마지막 월,화,수)\n주말 11:00 - 22:00" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/bookstore_phone_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookstore_phone_img"
        tools:text="010-0000-9999" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/bookstore_insta_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/bookstore_insta_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookstore_insta_img"
        tools:text="서점 인스타그램 @eoseoeoseo" />

</android.support.constraint.ConstraintLayout>